<UserControl x:Class="RCC.Components.TabButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:RCC"
             mc:Ignorable="d"
             Background="Transparent"
             Width="150"
             Height="72"
             d:DesignHeight="72"
             d:DesignWidth="150"
             >
    <Grid>
        <Label HorizontalAlignment="Center" FontSize="30" Foreground="#C6717790" FontFamily="Font Awesome 6 Free Solid" VerticalAlignment="Center" Margin="0 0 0 19" Content="{Binding  Icon}" Padding="0" />
        <Label VerticalAlignment="Bottom" HorizontalContentAlignment="Center" Content="{Binding  Text}" Padding="0" FontSize="15" Foreground="#FFFFFF" />
    </Grid>
</UserControl>
